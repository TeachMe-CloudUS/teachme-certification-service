db.createCollection("certificates", { validator: { $jsonSchema: { bsonType: "object", required: ["student_id", "name", "certificate_path", "created_at", "status"], properties: { student_id: { bsonType: "int", description: "must be an integer and is required" }, name: { bsonType: "string", description: "must be a string and is required" }, certificate_path: { bsonType: "string", description: "must be a string and is required" }, course: { bsonType: "string", description: "must be a string and is required" }, created_at: { bsonType: "date", description: "must be a date and is required" }, status: { enum: ["PENDING", "COMPLETED", "FAILED"], description: "can only be one of the enum values and is required" } } } } })